<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_attribute_set" model="ir.ui.view">
            <field name="name">product.template.form.view.inherit.attribute.set</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="after">
                    <group>
                        <group>
                            <field name="erp_product_attribute_set_id" options="{'no_open': True, 'no_quick_create': True}"/>
                            <field name="erp_is_stocked"/>
                            <field name="erp_is_discontinued"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="erp_product_fullname"/>
                    <field name="erp_product_name_eng"/>
                    <field name="brand_segment_id"/>
                    <field name="product_gender_id"/>
                    <field name="product_line_id"/>
                    <field name="sub_categ_id"/>
                    <field name="erp_tax_id"/>
                </xpath>
            </field>
        </record>
        <record id="z_wms_product_template_search_form_inherit" model="ir.ui.view">
            <field name="name">z.wms.product.template.search.form.inherit</field>
            <field name="model">product.template</field>
            <field name="mode">extension</field>
            <field name="inherit_id" ref="stock.product_template_search_form_view_stock"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" string="Product" filter_domain="['|', '|', '|', '|', '|', ('default_code', 'ilike', self), ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self), ('erp_product_fullname', 'ilike', self), ('erp_product_name_eng', 'ilike', self)]"/>
                </field>
            </field>
        </record>
    </data>
</odoo>