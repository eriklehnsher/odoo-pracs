<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_quant_package_pick_form_view" model="ir.ui.view">
            <field name="name">stock.quant.package.pick.form.view</field>
            <field name="model">stock.quant.package.pick</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="quant_ids">
                            <tree editable="bottom" create="false">
                                <field name="x_is_pick"/>
                                <field name="product_id" readonly="True"/>
                                <field name="package_id" readonly="True"/>
                                <field name="lot_id" readonly="True"/>
                                <field name="quantity" readonly="True"/>
                                <field name="company_id" column_invisible="True"/>
                                <field name="location_id" column_invisible="True"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button string="Select" name="action_select_package" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>