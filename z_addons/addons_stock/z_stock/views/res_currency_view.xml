<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="erp_res_currency_view_tree" model="ir.ui.view">
            <field name="name">erp.res.currency.view.tree</field>
            <field name="model">erp.res.currency</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code"/>
                    <field name="symbol"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="erp_res_currency_view_action" model="ir.actions.act_window">
            <field name="name">Currencies</field>
            <field name="res_model">erp.res.currency</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>