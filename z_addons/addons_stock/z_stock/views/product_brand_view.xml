<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_brand_tree_view" model="ir.ui.view">
            <field name="name">product.brand.tree.view</field>
            <field name="model">product.brand</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="brand_code" required="True"/>
                    <field name="brand_name" required="True"/>
                    <field name="brand_description"/>
                </tree>
            </field>
        </record>

        <record id="product_brand_action_view" model="ir.actions.act_window">
            <field name="name">Product Brand</field>
            <field name="res_model">product.brand</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="erp_brand_segment_view_tree" model="ir.ui.view">
            <field name="name">erp.brand.segment.view.tree</field>
            <field name="model">erp.brand.segment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="erp_id"/>
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <record id="erp_brand_segment_action" model="ir.actions.act_window">
            <field name="name">Thương hiệu sản phẩm</field>
            <field name="res_model">erp.brand.segment</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>