<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_location_view_form_inherit_for_config_volume" model="ir.ui.view">
            <field name="name">stock_location_view_form_inherit_for_config_volume</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group[3]" position="after">
                    <group string="Location Size">
                        <div class="o_row" style="width: 500px !important;">
                            <field name="length"/>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="uom_id"/>
                            <label for="uom_id" string="Uom"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>