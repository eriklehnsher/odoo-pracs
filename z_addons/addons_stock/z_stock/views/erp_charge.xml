<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="erp_charge_view_form" model="ir.ui.view">
            <field name="name">erp.charge.view.form</field>
            <field name="model">erp.charge</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="erp_charge_view_tree" model="ir.ui.view">
            <field name="name">erp.charge.view.tree</field>
            <field name="model">erp.charge</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="erp_charge_action" model="ir.actions.act_window">
            <field name="name">Khoản phí</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">erp.charge</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="erp_charge_menu" name="Khoản phí" parent="stock.menu_stock_config_settings" action="erp_charge_action" sequence="105"/>
    </data>
</odoo>