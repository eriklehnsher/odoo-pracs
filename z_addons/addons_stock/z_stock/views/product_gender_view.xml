<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_gender_tree_view" model="ir.ui.view">
            <field name="name">product.gender.tree.view</field>
            <field name="model">product.gender</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="code" required="True"/>
                    <field name="name" required="True"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="product_gender_action_view" model="ir.actions.act_window">
            <field name="name">Product Gender</field>
            <field name="res_model">product.gender</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>