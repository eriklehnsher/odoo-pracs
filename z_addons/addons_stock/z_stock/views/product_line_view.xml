<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_line_tree_view" model="ir.ui.view">
            <field name="name">product.line.tree.view</field>
            <field name="model">product.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="line_code" required="True"/>
                    <field name="line_name" required="True"/>
                    <field name="line_description"/>
                </tree>
            </field>
        </record>

        <record id="product_line_action_view" model="ir.actions.act_window">
            <field name="name">Product line</field>
            <field name="res_model">product.line</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>