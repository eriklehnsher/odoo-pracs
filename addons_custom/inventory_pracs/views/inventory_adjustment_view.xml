<odoo>
    <data>
        <record id="inventory_adjustment_form_view" model="ir.ui.view">
            <field name="name">inventory.adjustment.form</field>
            <field name="model">inventory.adjustment</field>
            <field name="arch" type="xml">
              <form string="Inventory Adjustment">
                  <header>
                    <button name="action_start" string="Yêu cầu phê duyệt " type="object" class="oe_highlight"/>
                    <button name="action_validate" string="phê duyệt" type="object" class="oe_highlight"/>
                    <button name="action_cancel" string="Từ chối phê duyệt" type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending, approved, rejected"/>
                  </header>
                <sheet>
                  <group>
                      <group>
                        <field name="name"/>
                        <field name="inventory_adjustment_code"/>
                        <field name="state_date"/>
                        <field name="end_date"/>
                      </group>

                      <group>
                        <field name="warehouse_id" required="1"/>
                        <field name="company_id" required="1"/>
                        <field name="stock_take_manager" required="1"/>
                      </group>
                  </group>
                </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="inventory_adjustment_tree_view" model="ir.ui.view">
            <field name="name">inventory.adjustment.tree</field>
            <field name="model">inventory.adjustment</field>
            <field name="arch" type="xml">
                <tree string="Inventory Adjustment">
                    <field name="name"/>
                    <field name="inventory_adjustment_code"/>
                    <field name="state_date"/>
                    <field name="end_date"/>
                    <field name="warehouse_id"/>
                    <field name="state"
                    decoration-success="state == 'approved'"
					decoration-danger="state == 'rejected'"
					decoration-info="state == 'pending'"
					widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="action_create_inventory_adjustment" model="ir.actions.act_window">
            <field name="name">Inventory Adjustment</field>
            <field name="res_model">inventory.adjustment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_inventory_adjustment" name="Inventory Adjustment" parent="stock.menu_stock_adjustments" action="action_create_inventory_adjustment"/>
    </data>
</odoo>