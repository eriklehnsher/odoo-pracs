<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="erp_res_company_view_form" model="ir.ui.view">
            <field name="name">erp.res.company.view.form</field>
            <field name="model">erp.res.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="erp_client_name"/>
                            <field name="erp_org_code"/>
                            <field name="erp_org_name"/>
                            <field name="erp_org_address"/>
                            <field name="erp_tax_code"/>
                            <field name="erp_phone"/>
                            <field name="erp_fax"/>
                            <field name="erp_email"/>
                            <field name="erp_is_active"/>
                            <field name="erp_created_at"/>
                            <field name="erp_updated_at"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="erp_res_company_view_tree" model="ir.ui.view">
            <field name="name">erp.res.company.view.tree</field>
            <field name="model">erp.res.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="erp_client_name"/>
                </tree>
            </field>
        </record>
        <record id="erp_res_company_action" model="ir.actions.act_window">
            <field name="name">Đơn vị</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">erp.res.company</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="erp_res_company_menu" name="Đơn vị" parent="stock.menu_stock_config_settings" action="erp_res_company_action" sequence="110"/>
    </data>
</odoo>