<odoo>
    <data noupdate="1">
        <record id="plan_sale_order_category" model="ir.module.category">
            <field name="name">Phương Án Kinh Doanh</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_staff" model="res.groups">
            <field name="name">Nhân viên</field>
            <field name="category_id" ref="plan_sale_order_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

         <record id="group_team_leader" model="res.groups">
            <field name="name">Trưởng Nhóm Bán Hàng</field>
            <field name="category_id" ref="plan_sale_order_category"/>
            <field name="implied_ids" eval="[(4, ref('group_staff'))]"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Trưởng Phòng Bán Hàng</field>
            <field name="category_id" ref="plan_sale_order_category"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>