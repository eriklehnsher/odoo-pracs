<odoo>
    <data>
        <record id="stock_picking_cancel_view" model="ir.ui.view">
            <field name="name">stock.picking.cancel.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="action_cancel_picking_done" confirm="Bạn có chắc hủy phiếu kho" string="Hủy" type="object" invisible="state != 'done'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>