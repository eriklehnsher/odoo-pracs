<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="x_account_tax_view_tree" model="ir.ui.view">
            <field name="name">erp.account.tax.view.tree</field>
            <field name="model">erp.account.tax</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="tax_name"/>
                    <field name="tax_amount"/>
                    <field name="tax_description"/>
                </tree>
            </field>
        </record>

        <record id="account_tax_view_action" model="ir.actions.act_window">
            <field name="name">Taxes</field>
            <field name="res_model">erp.account.tax</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>